{% for item in items %}
	{% set active = (item.active) ? ' is-active' : '' %}
	<li class="item-navegation-{{item_level}} {{ active }} {{ item.submenu ? 'item-dropdown' }}">
		<a class="link-item-{{item_level}}" href="{{ item.url }}">{{ item.text }}</a>
		<span class="z-activa-fl"></span>
		{% if item.submenu %}
			{% set default_level = default_level+1 %}
			<ul class="menu-level-{{ default_level }}">
				{% include "@abogados/nav/inner-menu.html.twig" with {"items":item.submenu} %}
			</ul>
		{% endif %}
	</li>
{% endfor %}
