<section class="instruction-groups">
	<header class="instruction-groups-header">
		<h2>{{paragraph.field_title.value}}</h2>
		{{paragraph.field_summary.value|raw}}
	</header>
	<div class="instruction-groups-content">
		<div class="row">
			{% set count = 1 %}
			{% for item in paragraph.field_instructions %}
				<div class="col-12 col-md-4">
					<div class="instruction-card">
						<div class="count-primary">
							<h2>{{count}}</h2>
						</div>
						<h3>
							<span class="count-mobile">{{count}}</span>
							{{item.entity.field_title.value}}</h3>
						<p>{{item.entity.field_summary_short.value}}</p>
						<a href="{{item.entity.field_link.0.url}}" title="{{item.entity.field_link.title}}" target="{{ item.entity.field_link.0.url.external ? '_blank' : '_self' }}">{{item.entity.field_link.title}}</a>
					</div>
				</div>
				{% set count = count + 1 %}
			{% endfor %}
		</div>
	</div>
</section>
